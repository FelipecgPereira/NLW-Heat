{
  "compilerOptions": {
    "target": "es2017",                                     
    "module": "commonjs",  
    "experimentalDecorators": true,   
                        
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,    
    "strictPropertyInitialization": false,        
    "strict": false,                                      
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"]  ,
    "resolveJsonModule": true                          
  }
}
